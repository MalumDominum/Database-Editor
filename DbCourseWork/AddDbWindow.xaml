<Window x:Class="DbCourseWork.AddDbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbCourseWork"
        mc:Ignorable="d"
        Title="Add Database" Height="300" Width="400" 
        Icon="./database.ico" Background="#333"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0 5 0 0" Foreground="#FF32EBFB">Введите пароль:</TextBlock>
        <PasswordBox Name="PasswordBox" Grid.Row="1" Password="12345678" ToolTip="PasswordBox" Width="200"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="AcceptButton"
                    IsDefault="True" Click="Accept_Click" 
                    Height="35" Width="60" Margin="0,0,10,0">OК</Button>
            <Button IsCancel="True" Height="35" Width="60">Отмена</Button>
        </WrapPanel>
    </Grid>
</Window>
